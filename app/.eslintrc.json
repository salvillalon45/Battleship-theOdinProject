{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "object-shorthand": "off",
        "func-names": ["off"],
        "comma-dangle": ["error", "never"],
        "prettier/prettier": [
            "error", {
            "singleQuote": true,
            "endOfLine":"auto",
            "useTabs": true,
            "tabWidth": 4,
            "trailingComma": "none"
        }]
    }
}
